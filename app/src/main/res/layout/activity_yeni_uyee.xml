<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yeniUye">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:weightSum="3">
            <Button
                android:id="@+id/bkturizm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="BK TURİZM"
                android:background="@drawable/butonshape"/>

            <ImageButton
                android:id="@+id/butonuser"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/images" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editAd"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:maxLength="20"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:hint="    Ad:"
                android:background="@drawable/editshape"
                android:inputType="text|textPersonName"
                android:textColorHighlight="@color/krem"
                android:textColorLink="@color/krem"
                android:textCursorDrawable="@color/krem" />
            <EditText
                android:id="@+id/editSoyad"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editshape"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:maxLength="20"
                android:hint="  Soyad:"
                android:inputType="text|textPersonName"
                android:textColorHighlight="@color/krem"
                android:textColorLink="@color/krem"
                android:textCursorDrawable="@color/krem" />
            <EditText
                android:id="@+id/eposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  E-posta"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/editshape"
                android:inputType="text|textEmailAddress"
                android:textColorHighlight="@color/krem"
                android:textColorLink="@color/krem"
                android:textCursorDrawable="@color/krem" />


            <EditText
                android:id="@+id/sifre"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/editshape"
                android:hint="  Şifre: "
                android:maxLength="8"
                android:inputType="text|textPassword"
                android:textColorHighlight="@color/krem"
                android:textColorLink="@color/krem"
                android:textCursorDrawable="@color/krem" />
            <EditText
                android:id="@+id/sifreTekrar"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:maxLength="8"
                android:hint="  Şifre Tekrar: "
                android:background="@drawable/editshape"
                android:inputType="text|textPassword"
                android:textColorHighlight="@color/krem"
                android:textColorLink="@color/krem"
                android:textCursorDrawable="@color/krem" />

            <EditText
                android:id="@+id/editTel"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/editshape"
                android:hint="  Telefon:"
                android:inputType="number|text"
                android:maxLength="11"
                android:textColorHighlight="@color/krem"
                android:textColorLink="@color/krem"
                android:textCursorDrawable="@color/krem" />


            <Button
                android:id="@+id/girisyap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/butonshape"
                android:text="Kayıt ol"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>